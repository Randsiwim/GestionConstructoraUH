@model GestionConstructoraUH.Models.Asignacion

<h2>Nueva Asignación de Empleado a Proyecto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="IdEmpleado">Empleado</label>
        <select asp-for="IdEmpleado" asp-items="ViewBag.Empleados" class="form-control">
            <option value="">-- Seleccione un Empleado --</option>
        </select>
        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IdProyecto">Proyecto</label>
        <select asp-for="IdProyecto" asp-items="ViewBag.Proyectos" class="form-control">
            <option value="">-- Seleccione un Proyecto --</option>
        </select>
        <span asp-validation-for="IdProyecto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="FechaAsignacion">Fecha de Asignación</label>
        <input asp-for="FechaAsignacion" class="form-control" type="date" />
        <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



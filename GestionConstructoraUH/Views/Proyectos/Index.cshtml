@model IEnumerable<GestionConstructoraUH.Models.Proyecto>

<h2>Lista de Proyectos</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Nuevo Proyecto</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Código Proyecto</th>
            <th>Nombre Proyecto</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Finalización</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proyecto in Model)
        {
            <tr>
                <td>@proyecto.IdProyecto</td>
                <td>@proyecto.CodigoProyecto</td>
                <td>@proyecto.NombreProyecto</td>
                <td>@proyecto.FechaInicio.ToShortDateString()</td>
                <td>@(proyecto.FechaFin?.ToShortDateString() ?? "No definida")</td>
                <td>
                    <!-- Botón Editar -->
                    <a asp-action="Edit" asp-route-id="@proyecto.IdProyecto" class="btn btn-warning btn-sm">
                        Editar
                    </a>
                    <!-- Botón Eliminar -->
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@proyecto.IdProyecto" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar este proyecto?');">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
